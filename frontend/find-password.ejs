<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>비밀번호 찾기 페이지</title>
    <link rel="stylesheet" href="../styles/header.css">
    <link rel="stylesheet" href="../styles/find-password.css">
</head>
<body>
    <div id="header-container"></div>

    <div class="find-password">
        <label for="find-id">아이디 입력</label>
        <input type="text" id="find-id" placeholder="아이디를 입력하세요">
        <button id="find-password-button">비밀번호 찾기</button>
    </div>

    <!-- 모달창 -->
    <div id="password-modal" class="modal hidden">
        <div class="modal-content">
            <p id="password-message">Password: 123456789 입니다.</p>
            <button id="close-modal-button">닫기</button>
        </div>
    </div>

    <script type="module">
        import { loadHeader } from '../components/header.js';
        loadHeader('header-container');

        // JavaScript 추가
        const findButton = document.getElementById("find-password-button");
        const modal = document.getElementById("password-modal");
        const closeModalButton = document.getElementById("close-modal-button");
        const findIdInput = document.getElementById("find-id");

        findButton.addEventListener("click", () => {
            const userId = findIdInput.value.trim();
            if (userId) {
                // 아이디 입력이 있을 경우 모달창 표시
                document.getElementById("password-message").textContent =
                    `Password: 123456789 입니다.`;
                modal.classList.remove("hidden");
            } else {
                alert("아이디를 입력하세요.");
            }
        });

        closeModalButton.addEventListener("click", () => {
            modal.classList.add("hidden");
        });
    </script>
</body>
</html>
