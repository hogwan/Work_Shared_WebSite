<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>마이 페이지</title>
    <link rel="stylesheet" href="../styles/header.css">
    <link rel="stylesheet" href="../styles/mypage.css">
</head>
<body>
    <div id="header-container"></div>
    <div class="mypage-container">
        <h1>My page</h1>
        <div class="profile-section">
            <div class="profile-info">
                <p><strong>닉네임</strong>: 빙하맨</p>
                <p><strong>ID</strong>: honggildong1234</p>
            </div>
            <!-- 구분선 -->
        <hr class="separator">
        </div>
        <div class="my-artworks">
            <h3>나의 작품</h3>
            <div class="artwork-grid">
                <div class="artwork-item" data-id="1">
                    <img src="../images/art1.jpg" alt="Artwork 1">
                </div>
                <div class="artwork-item" data-id="2">
                    <img src="../images/art2.jpg" alt="Artwork 2">
                </div>
                <div class="artwork-item" data-id="3">
                    <img src="../images/art3.jpg" alt="Artwork 3">
                </div>
                <div class="artwork-item add-new">
                    <p>+</p>
                </div>
            </div>
        </div>
    </div>

    <script type="module">
        import { loadHeader } from '../components/header.js';
        loadHeader('header-container');

        // 클릭 시 작품 정보 페이지로 이동
        document.querySelectorAll('.artwork-item').forEach(item => {
            item.addEventListener('click', () => {
                const id = item.getAttribute('data-id');
                if (id) {
                    window.location.href = `board-info.html?id=${id}`;
                }
            });
        });
    </script>
</body>
</html>

