<%- include('includes/head.ejs', { title: 'Notice' }) %>
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="stylesheet" href="/styles/notice.css">
</head>
<body>
    <%- include('includes/header.ejs') %>

    <div class="notice-container">
        <h1>Notice / 공지사항</h1>
        <table class="notice-table">
            <thead>
                <tr>
                    <th>순번</th>
                    <th>제목</th>
                    <th>등록자명</th>
                    <th>작성 날짜</th>
                </tr>
            </thead>
            <tbody id="notice-tbody">
                <!-- 공지사항 데이터가 여기 렌더링됩니다 -->
            </tbody>
        </table>
        <div class="pagination">
            <button class="page-btn" data-page="prev">◀</button>
            <div id="page-indicators">
                <!-- 페이지 버튼 동그라미가 여기에 렌더링됩니다 -->
            </div>
            <button class="page-btn" data-page="next">▶</button>
        </div>
    </div>

    <script src="/scripts/notice.js"></script>
    <script type="module">
        import { loadHeader } from '/scripts/header.js';
        loadHeader('header-container');
    </script>
</body>
</html>
