<%- include('includes/head.ejs', { title: 'ImageUpload' }) %>
</head>
<body>
  <%- include('includes/header.ejs') %>
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="stylesheet" href="/styles/upload.css">
    <script src="/scripts/file-preview.js" defer></script>
    <script src="/scripts/addTag.js" defer></script>
</head>
<body>
    <!-- Header -->
    <div id="header-container"></div>

    <!-- Main Content -->
    <div class="upload-container">
        <h1>Image Upload</h1>
        <form action="/main" method="POST" enctype="multipart/form-data">
            <div class="upload-form">
                <!-- Left Section: Image Upload -->
                <div class="upload-image">
                    <input type="file" id="file-upload" class="upload-input" name="image" accept="image/*" required>
                    <div id="image-preview-container">
                        <label for="file-upload" class="upload-label" id="fileuploadLabel">사진 업로드</label>
                        <img id="image-preview" src="" alt="Your picked image.">
                        <!-- 업로드된 이미지 미리보기가 여기에 표시됩니다 -->
                    </div>
                </div>
                <!-- Right Section: Details -->
                <div class="upload-details">
                    <div class="upload-field">
                        <label for="title">작품명</label>
                        <input type="text" id="title" name="imageName" placeholder="작품명을 입력하세요">
                    </div>
                    <div class="upload-field">
                        <label for="description">작품 설명</label>
                        <textarea id="description" name="imageExplain" placeholder="작품 설명을 입력하세요"></textarea>
                    </div>
                    <div class="upload-field">
                        <label>태그</label>
                        <div class="tags">
                            <input type="text" class="tag-input" id="tagInput" name="imageTag" placeholder="# 태그 추가">
                            <!-- <button class="tag-add-button" id="addButton">+ 추가</button>
                        </div>
                        <div>
                            <ul id="tags-container">

                            </ul>
                        </div> 추가된 태그가 여기에 표시됩니다 -->
                    </div>
                </div>
            </div>
            <!-- Submit Button -->
            <button class="upload-submit-button">올리기</button>
        </div>
    </form>
</body>
</html>
